{
  "$id": "trainingModule",
  "type": "object",
  "properties": {
    "authorsStr": {
      "$ref": "defs#/definitions/authorsStr"
    },
    "referent": {
      "type": "integer"
    },
    "year": {
      "$ref": "defs#/definitions/year"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "otherCourse": {
      "type": "boolean"
    },
    "hours": {
      "type": "integer"
    },
    "lectures": {
      "type": "integer"
    },
    "researchDomains": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "location": {
      "type": "string"
    },
    "delivery": {
      "type": "string",
      "enum": [
        "On Line",
        "In Presence",
        "On Line/In Presence"
      ]
    }
  },
  "if": {
    "properties": {
      "otherCourse": {
        "const": true
      }
    }
  },
  "then": {
    "properties": {
      "institute": {
        "const": null
      },
      "phdCourse": {
        "const": null
      }
    }
  },
  "else": {
    "properties": {
      "institute": {
        "type": "integer"
      },
      "phdCourse": {
        "type": "integer"
      }
    }
  },
  "required": [
    "authorsStr",
    "referent",
    "year",
    "title",
    "description",
    "otherCourse",
    "hours",
    "lectures",
    "researchDomains",
    "location",
    "delivery"
  ]
}